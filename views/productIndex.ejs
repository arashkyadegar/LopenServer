<!DOCTYPE html>
<html lang="en">
  <head>
    <link rel="stylesheet" href="/output.css" />
  </head>
  <body class="container">
    <header><%- include('./partials/header'); %></header>
    <main>
      <div class="md:px-32 py-8 w-full">
        <div class="shadow overflow-hidden rounded border-b border-gray-200">
          <table class="min-w-full bg-white">
            <thead class="bg-gray-800 text-white">
              <tr>
                <th
                  class="w-2/3 text-right py-3 px-4 uppercase font-semibold text-sm"
                >
                  نام محصول
                </th>
                <th
                  class="w-1/3 text-right py-3 px-4 uppercase font-semibold text-sm"
                >
                  تصویر
                </th>
                <th
                  class="w-1/3 text-right py-3 px-4 uppercase font-semibold text-sm"
                >
                  قیمت
                </th>
                <th
                  class="w-1/3 text-right py-3 px-4 uppercase font-semibold text-sm"
                >
                  وزن
                </th>
                <th
                  class="text-right py-3 px-4 uppercase font-semibold text-sm"
                >
                
                </th>
              </tr>
            </thead>
            <tbody class="text-gray-700">
              <% data.message.forEach(function(item) { %>
              <tr>
                <td class="w-1/3 text-right py-3 px-4"><%= item.name %></td>
                <td class="w-1/3 text-right py-3 px-4">تصویر</td>
                <td class="w-1/3 text-right py-3 px-4"><%= item.price %></td>
                <td class="w-1/3 text-right py-3 px-4"><%= item.weight %></td>

                <td
                  class="flex flex-row gap-2 justify-center items-center text-right py-8 px-4"
                >
                  <a class="hover:text-blue-500" href=<%= item._id %> >
                    <!-- view icon -->
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke-width="1.5"
                      stroke="currentColor"
                      class="w-6 h-6"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M2.036 12.322a1.012 1.012 0 0 1 0-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178Z"
                      />
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z"
                      />
                    </svg>
                  </a>

                  <a class="hover:text-blue-500" href=<%= 'edit/' + item._id %>>
                    <!-- edit icon -->
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke-width="1.5"
                      stroke="currentColor"
                      class="w-6 h-6"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10"
                      />
                    </svg>
                  </a>
                  <a class="hover:text-red-500" href=<%= 'delete/' + item._id %>>
                    <!-- delete icon -->
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke-width="1.5"
                      stroke="currentColor"
                      class="w-6 h-6"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M6 18 18 6M6 6l12 12"
                      />
                    </svg>
                  </a>
                </td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </main>

    <footer><%- include('./partials/footer'); %></footer>
  </body>
</html>
