<!DOCTYPE html>
<html lang="en">
  <head>
    <link rel="stylesheet" href="/output.css" />
  </head>
  <body class="container">
    <header><%- include('./partials/header'); %></header>

    <main class="p-4">
      <div className="px-2 ">
        <a className=" flex text-2xl border-b p-4 border-gray-400">
          ویرایش اطلاعات محصول
        </a>
      </div>
      <% if (typeof error != 'undefined') { %> <%
      error.details.forEach(function(item) { %>
      <p class="text-red-500 text-right"><%= item.message %></p>
      <% }); %> <%} %>
      <form
      action='/products/edit/<%= product._id %>'
      method="post"
      enctype="multipart/form-data"
      class="w-full flex flex-row">
        <div class="w-1/2 mx-auto">
          <div class="flex flex-col gap-2 m-2">
            <input id="files" name="files"  type="file" multiple />
          </div>
          <!-- <div class="flex flex-col gap-2 m-2">
            <label htmlFor="_id" class="w-20 text-sm font-bold">
              کد محصول
            </label>
            <input type="text" name="_id" id="_id" class="p-1 border
            border-gray-300 bg-[#F9FAFB]" placeholder="کد محصول" value ='<%= (typeof
            product != undefined)? product._id : '' %>'
            />
          </div> -->

          <div class="flex flex-col gap-2 m-2">
            <label htmlFor="name" class="w-20 text-sm font-bold">
              نام
            </label>
            <input type="text" name="name" id="name" class="p-1 border
            border-gray-300 bg-[#F9FAFB]" placeholder="نام" value ='<%= (typeof
            product != undefined)? product.name : '' %>'
            />
          </div>

          <div class="flex flex-col gap-2 m-2">
            <label htmlFor="weight" class="w-20 text-sm font-bold">
              وزن
            </label>
            <input
              type="text"
              name="weight"
              id="weight"
              class="p-1 border border-gray-300 bg-[#F9FAFB]"
              placeholder="وزن محصول"
              value ='<%= (typeof
              product != undefined)? product.weight : '' %>'
            />
          </div>

          <div class="flex flex-col gap-2 m-2">
            <label htmlFor="size" class="w-20 text-sm font-bold">
              سایز
            </label>
            <input
              type="text"
              name="size"
              id="size"
              class="p-1 border border-gray-300 bg-[#F9FAFB]"
              placeholder="سایز"
              value ='<%= (typeof
              product != undefined)? product.size : '' %>'
            />
          </div>

          <div class="flex flex-col gap-2 m-2">
            <label htmlFor="healthId" class="w-40 text-sm font-bold">
              شماره سلامت
            </label>
            <input
              type="text"
              name="healthId"
              id="healthId"
              class="p-1 border border-gray-300 bg-[#F9FAFB]"
              placeholder="شماره سلامت"
              value ='<%= (typeof
              product != undefined)? product.healthId : '' %>'
            />
          </div>

          <div class="flex flex-col gap-2 m-2">
            <label htmlFor="score" class="w-20 text-sm font-bold">
              امتیاز
            </label>
            <input
              type="text"
              name="score"
              id="score"
              class="p-1 outline-none border border-gray-300 bg-[#F9FAFB]"
              placeholder="امتیاز"
              value ='<%= (typeof
              product != undefined)? product.score : '' %>'
            />
          </div>

          <div class="flex flex-col gap-2 m-2">
            <label htmlFor="text_type" class="w-20 text-sm font-bold">
              نوع
            </label>
            <input
              type="text"
              name="type"
              id="type"
              class="p-1 outline-none border border-gray-300 bg-[#F9FAFB]"
              placeholder=" نوع"
              value ='<%= (typeof
              product != undefined)? product.type : '' %>'
            />
          </div>

          <div class="flex flex-col gap-2 m-2">
            <label htmlFor="price" class="w-20 text-sm font-bold">
              قیمت
            </label>
            <input
              type="text"
              name="price"
              id="price"
              class="p-1 outline-none border border-gray-300 bg-[#F9FAFB]"
              placeholder="قیمت"
              value ='<%= (typeof
              product != undefined)? product.price : '' %>'
            />
          </div>

          <div class="flex flex-col gap-2 m-2">
            <label htmlFor="display" class="w-40 text-sm font-bold">
              وضعیت نمایش
            </label>
            <select
              type="text"
              name="display"
              id="display"
              class="p-1 outline-none border border-gray-300 bg-[#F9FAFB]"
              placeholder="نمایش"
              value ='<%= (typeof
              product != undefined)? product.display : '' %>'
            >
              <option value="true">نمایش</option>
              <option value="false">پنهان</option>
            </select>
          </div>

          <div class="flex flex-col gap-2 m-2">
            <label htmlFor="isAvailable" class="w-20 text-sm font-bold">
              موجودی
            </label>

            <select
              type="text"
              name="isAvailable"
              id="isAvailable"
              class="p-1 outline-none border border-gray-300 bg-[#F9FAFB]"
              placeholder="موجودی"
              value ='<%= (typeof
              product != undefined)? product.isAvailable : '' %>'
            >
              <option value="true">موجود</option>
              <option value="false">اتمام</option>
            </select>
          </div>
          <div class="flex flex-col gap-2 mx-2 sm:mt-2">
            <label htmlFor="components" class="w-20 text-sm font-bold">
              ترکیبات
            </label>
            <textarea
              name="components"
              id="components"
              rows="{4}"
              class="grow p-2 outline-none border border-gray-300 bg-[#F9FAFB]"
              placeholder="ترکیبات"   
            ><%= (typeof product != undefined)? product.components : '' %>
          </textarea>
            <p class="text-red-400 text-xs h-5"></p>
          </div>

          <div class="flex flex-col gap-2 mx-2">
            <label htmlFor="desc" class="w-20 text-sm font-bold">
              توضیحات
            </label>
            <textarea
              name="desc"
              id="desc"
              rows="{4}"
              class="grow p-2 outline-none border border-gray-300 bg-[#F9FAFB]"
              placeholder="توضیحات"
            ><%= (typeof product != undefined)? product.desc : '' %></textarea>
            <p class="text-red-400 text-xs h-5"></p>
          </div>

          <div class="flex flex-col gap-2 m-2">
            <label htmlFor="tags" class="w-20 text-sm font-bold">
              برچسب ها
            </label>
            <textarea
              name="tags"
              id="tags"
              class="grow p-1 outline-none border border-gray-300 bg-[#F9FAFB]"
              placeholder=" برچسب ها"
            ><%= (typeof
            product != undefined)? product.tags : '' %>
          </textarea>
          </div>

          <div class="flex justify-end p-2">
            <button
              type="submit"
              class="text-white bg-blue-400 hover:bg-blue-700 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
            >
              ثبت تغییرات
            </button>
          </div>
        </div>
      </form>
    </main>

    <footer><%- include('./partials/footer'); %></footer>
  </body>
</html>
